{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "baseUrl": ".",
    "paths": {
      "root": [
        "."
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@sections/*": [
        "./src/sections/*"
      ],
      "types/*": [
        "./src/interfaces/*"
      ],
      "css/*": [
        "./src/styles/*"
      ],
      "@icons/*": [
        "./src/components/icons/*"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "public/*": [
        "./public/*"
      ]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
